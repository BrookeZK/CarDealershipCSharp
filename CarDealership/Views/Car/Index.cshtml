@using System;
@using CarDealership.Models;
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <title>Carz 2 Purchase</title>
  </head>
  <body class="container">
    <h1><em><strong>Here are our cars</em></strong></h1>
    <h1><em><strong>BUY THEM...!!!!</em></strong></h1>
    <h1 class="jumbotron">CARZ!</h1>

    <ul>
    @if (Model.Count == 0)
    {
      <p>There are no cars for sale!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Car car in Model)
      {
        <li>@car.MakeModel</li>
        <li>@car.Price</li>
        <li>@car.Miles</li>
        <li>@car.Message</li>
        <p>--------------------</p>
      }
    }
  </ul>
  <a  href="/admin">Admin only: add a new car.</a>
  </body>
</html>
